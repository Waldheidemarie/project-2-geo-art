<h1>{{title}}</h1>
<div class="card-columns pt-5">
  {{#each places}}
  <!-- Card -->
  <div class="card promoting-card shadow-sm">
    <!-- Card content -->
    <div class="card-body d-flex flex-row">
      <!-- Avatar -->
      <img src="{{creator.picture}}" class="avatar-img" height="50px" width="50px" alt="avatar">
      <!-- Content -->
      <div>
        <!-- Title -->
        <h4 class="card-title font-weight-bold mb-2">{{ name }}</h4>
        <!-- Subtitle -->
        <!--DATE FORMATTING
        <script>
          Handlebars.registerHelper('readableDate' function (dateMilli) {
