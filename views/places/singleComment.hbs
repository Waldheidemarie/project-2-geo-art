{{#with comment}}
<h3>Comment details:</h3>
<p><strong>Created by:</strong> {{creator.name}}</p>
<p><strong>Created at:</strong> {{createdDate}}</p>
<p><strong>Last Update:</strong> {{updatedDate}}</p>
<p><strong>Created on:</strong> {{place.name}}'s art post </p>
<br>
<h4>Comment:</h4>
<p>{{message}}</p>
{{/with}}

{{#if isOwner}}
{{#with comment}}
      <div class="row" >
      <form action="/comments/{{place._id}}/edit/{{ _id }}" method="GET" style="margin-right: 25px;">
       <button class="btn btn-primary btn-sm"><i class="fa fa-thumbs-up"></i>Edit</button>
       </form>
<!--
      <form action="/comments/delete/{{ comment._id }}" method="POST">
       <button class="btn btn-primary btn-sm"><i class="fa fa-thumbs-up"></i>Delete</button>
      </form>
      -->

      <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModal">Delete</button>
      </div>

      <!-- Delete Post Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        This cannot be undone.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Nevermind!</button>
        <form action="/comments/delete/{{ comment._id }}" method="POST">
          <button class="btn btn-primary">Yes, Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/with}}
{{/if}}