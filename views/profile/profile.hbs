<h2>{{user.name}}'s Profile</h2>
<div class="row">
<img class="img-profile" src="{{user.picture}}" alt='user profile image' />
<br>
<div class="flex-column" style="margin-left: 40px;">
{{#if user.location}}
<label><strong>Location:</strong> {{user.location}}</label>
{{/if}}
<br>
{{#if user.bio}}
<label><strong>About me:</strong> {{user.bio}}</label>
{{/if}}
</div>
</div>
<div class="flex-column">
  <div>
    <button type="button" class="btn btn-link"><a href="/profile/edit/{{user._id}}">Update Details</a></button>
  </div>
  <div>
    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#exampleModal">Delete my Account</button>
  </div>
</div>


<!--<button type="button" class="btn btn-link">Delete my Account</button>-->
<!-- Delete Account Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        This cannot be undone.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Nevermind!</button>
        <form action="/profile/delete" method="POST">
          <button class="btn btn-primary">Yes, Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
